extends layout

block content
  h1 Books
    p
      a.button(href='/books/new') Create New Book
    form(action='/search')
      div
          label(for='search') Search
          input#search(name='term', type='search')
      div
        input(type='submit')
    p
      a.button(href='/books/page/0') Back To Home
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href='/books/' + book.id) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.year}
    if !search
      p
        a.button(href=`/books/page/` + pagePrevious) Previous  
        |&nbsp;
        |&nbsp;
        |&nbsp;
        |&nbsp;
        |&nbsp;
        |&nbsp;
        a.button(href=`/books/page/` + page) Next
      
